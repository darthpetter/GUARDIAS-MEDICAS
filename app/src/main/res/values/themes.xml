<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GUARDIASMEDICAS" parent="Theme.AppCompat">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/fuentes_sistema</item>
    </style>
    <style name="Theme.GUARDIASMEDICAS.editText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/verde_texto</item>
        <item name="android:textColorHint">@color/verde_texto</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/black</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>
</resources>