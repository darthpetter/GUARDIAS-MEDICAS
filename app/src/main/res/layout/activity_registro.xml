<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_verde_azul"
    android:padding="25dp"
    tools:context=".ui.viewModel.Registro">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:srcCompat="@drawable/saly_38" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNombresC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bloque_redondeado"
            android:ems="10"
            android:hint="Nombres y apellidos"
            android:inputType="textPersonName"
            android:textColor="@color/verde_texto"
            android:theme="@style/Theme.GUARDIASMEDICAS.editText" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bloque_redondeado"
            android:ems="10"
            android:hint="Correo Electronico"
            android:inputType="textEmailAddress"
            android:textColor="@color/verde_texto"
            android:theme="@style/Theme.GUARDIASMEDICAS.editText" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bloque_redondeado"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColor="@color/verde_texto"
            android:theme="@style/Theme.GUARDIASMEDICAS.editText" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/boton_registro"
            android:onClick="registrar"
            android:text="Registrar"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>